{
    "compilerOptions": {
        "lib": ["es5"],
        "module": "commonjs",
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "paths": {
            "@app/*": [ "application/*" ],
            "@core/*": [ "core/*" ],
            "@domain/*": [ "domain/*" ],
            "@interface/*": [ "interface/*" ],
            "@infra/*": [ "infrastructure/*" ]
        }
    }
}
